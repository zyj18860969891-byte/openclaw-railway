{
  "name": "@openclaw/wecom",
  "version": "0.1.3",
  "type": "module",
  "description": "OpenClaw WeCom (WeChat Work) channel plugin",
  "license": "MIT",
  "files": [
    "dist",
    "moltbot.plugin.json",
    "clawdbot.plugin.json"
  ],
  "moltbot": {
    "extensions": [
      "./dist/index.js"
    ],
    "channel": {
      "id": "wecom",
      "label": "WeCom",
      "selectionLabel": "WeCom (企业微信)",
      "docsPath": "/channels/wecom",
      "blurb": "企业微信智能机器人回调",
      "aliases": [
        "wechatwork",
        "wework",
        "qywx"
      ],
      "order": 85
    },
    "install": {
      "npmSpec": "@openclaw/wecom",
      "localPath": ".",
      "defaultChoice": "npm"
    }
  },
  "clawdbot": {
    "extensions": [
      "./dist/index.js"
    ],
    "channel": {
      "id": "wecom",
      "label": "WeCom",
      "selectionLabel": "WeCom (企业微信)",
      "docsPath": "/channels/wecom",
      "blurb": "企业微信智能机器人回调",
      "aliases": [
        "wechatwork",
        "wework",
        "qywx"
      ],
      "order": 85
    },
    "install": {
      "npmSpec": "@openclaw/wecom",
      "localPath": ".",
      "defaultChoice": "npm"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@openclaw/shared": "file:../../packages/shared"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "fast-check": "^3.22.0",
    "tsup": "^8.2.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "openclaw": "workspace:*"
  },
  "private": true
}
