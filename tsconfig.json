{ 
  "compilerOptions": { 
    "target": "ES2022", 
    "module": "NodeNext", 
    "moduleResolution": "NodeNext", 
    "outDir": "dist", 
    "rootDir": "src", 
    "strict": false, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "noEmitOnError": false, 
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  }, 
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/test-helpers.ts"] 
}
